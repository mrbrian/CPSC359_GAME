struct	rect
	half	x,y
	byte 	w,h

class object
	rect	rect
	byte	hitpoints
	byte	value
	
class AI

class entity	: object		
	void move()
	void shoot()	

	update(input)

class Pawn	: entity
class Knight 	: entity
class Queen	: entity
class Player	: entity
	
class Bullet		
	byte	vx,	vy
	
